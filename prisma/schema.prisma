generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int           @id @default(autoincrement())
  firstName String
  lastName  String
  email     String        @unique
  password  String
  messages  Message[]
  channels  ChannelUser[]
}

model Channel {
  id        Int           @id @default(autoincrement())
  name      String
  messages  Message[]
  members   ChannelUser[]
  createdAt DateTime      @default(now())
}

model ChannelUser {
  id        Int         @id @default(autoincrement())
  userId    Int
  user      User        @relation(fields: [userId], references: [id])
  channelId Int
  channel   Channel     @relation(fields: [channelId], references: [id])
  role      ChannelRole @default(MEMBER)
  joinedAt  DateTime    @default(now())
}

model Message {
  id        Int      @id @default(autoincrement())
  message   String
  userId    Int
  User      User     @relation(fields: [userId], references: [id])
  channelId Int
  Channel   Channel  @relation(fields: [channelId], references: [id])
  createdAt DateTime @default(now())
}

enum ChannelRole {
  MEMBER
  ADMIN
}
